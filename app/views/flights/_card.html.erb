<div class="card mb-3">
  <h2 class="card-header h4">
    Flight #<%= flight.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Origin</dt>
      <dd><%= flight.origin %></dd>

      <dt>Destination</dt>
      <dd><%= flight.destination %></dd>

      <dt>Date</dt>
      <dd><%= flight.date %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back flight, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_flight_url(flight), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to flight, method: :delete, data: { confirm: "Do you really want to delete this flight?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(flight.updated_at) %> ago
  </div>
</div>
