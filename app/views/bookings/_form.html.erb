<% was_validated = booking.errors.any? %>

<%= form_with(model: booking, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for user_id start -->
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = booking.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <!-- Input for user_id start -->
    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for user_id end -->
    <% if user_was_invalid %>
      <% booking.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for user_id end -->
  <!-- Label and input for flight_id start -->
  <div class="form-group">
    <% flight_class = "form-control" %>
    <% flight_was_invalid = booking.errors.include?(:flight) %>

    <% if was_validated %>
      <% if flight_was_invalid %>
        <% flight_class << " is-invalid" %>
      <% else %>
        <% flight_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :flight_id %>
    <!-- Input for flight_id start -->
    <%= f.number_field :flight_id, class: flight_class, placeholder: "Enter flight" %>
    <!-- Input for flight_id end -->
    <% if flight_was_invalid %>
      <% booking.errors.full_messages_for(:flight).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for flight_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
