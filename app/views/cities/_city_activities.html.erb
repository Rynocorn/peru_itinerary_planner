<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Activities

    <a data-toggle="collapse" href="#city_activities_new_form">
      Add activity
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @city.activities.each do |activity| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to activity, activity %>

        <%= link_to activity, method: :delete, data: { confirm: "Do you really want to delete this activity" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="city_activities_new_form">
        <%= render partial: "cities/city_activities_new_form" %>
      </div>
    </div>

  </ul>
</div>
