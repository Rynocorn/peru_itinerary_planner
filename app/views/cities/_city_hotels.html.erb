<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Hotels

    <a data-toggle="collapse" href="#city_hotels_new_form">
      Add hotel
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @city.hotels.each do |hotel| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to hotel, hotel %>

        <%= link_to hotel, method: :delete, data: { confirm: "Do you really want to delete this hotel" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="city_hotels_new_form">
        <%= render partial: "cities/city_hotels_new_form" %>
      </div>
    </div>

  </ul>
</div>
