<%= form_with(model: @hotel, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <%= f.hidden_field :city_id, value: @city.id %>

  <div class="form-group">
    <%= f.label :user_id %>

    <%= f.text_field :user_id, class: "form-control" %>
  </div>

  <%= f.submit "Create hotel", class: "btn btn-block btn-outline-secondary" %>
<% end %>
