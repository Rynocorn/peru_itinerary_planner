<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Hotel Stays

    <a data-toggle="collapse" href="#hotel_hotel_stays_new_form">
      Add hotel stay
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @hotel.hotel_stays.each do |hotel_stay| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to hotel_stay, hotel_stay %>

        <%= link_to hotel_stay, method: :delete, data: { confirm: "Do you really want to delete this hotel_stay" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="hotel_hotel_stays_new_form">
        <%= render partial: "hotels/hotel_hotel_stays_new_form" %>
      </div>
    </div>

  </ul>
</div>
