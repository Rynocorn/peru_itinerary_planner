<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Activity Signups

    <a data-toggle="collapse" href="#user_activity_signups_new_form">
      Add activity signup
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.activity_signups.each do |activity_signup| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to activity_signup, activity_signup %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_activity_signups_new_form">
        <%= render partial: "users/user_activity_signups_new_form" %>
      </div>
    </div>

  </ul>
</div>
