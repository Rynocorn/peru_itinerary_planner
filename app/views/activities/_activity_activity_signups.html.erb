<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Activity Signups

    <a data-toggle="collapse" href="#activity_activity_signups_new_form">
      Add activity signup
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @activity.activity_signups.each do |activity_signup| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to activity_signup, activity_signup %>

        <%= link_to activity_signup, method: :delete, data: { confirm: "Do you really want to delete this activity_signup" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="activity_activity_signups_new_form">
        <%= render partial: "activities/activity_activity_signups_new_form" %>
      </div>
    </div>

  </ul>
</div>
