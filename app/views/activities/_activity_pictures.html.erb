<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Pictures

    <a data-toggle="collapse" href="#activity_pictures_new_form">
      Add picture
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @activity.pictures.each do |picture| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to picture, picture %>

        <%= link_to picture, method: :delete, data: { confirm: "Do you really want to delete this picture" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="activity_pictures_new_form">
        <%= render partial: "activities/activity_pictures_new_form" %>
      </div>
    </div>

  </ul>
</div>
